<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_notifyIcon"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_notifyIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_notifySongName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="Nice Music"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:textColor="@color/font_color"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_notifyArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:lines="1"
            android:singleLine="true"
            android:text="听你所想"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:textColor="@color/font_normal"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/ll_custom_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_notifyFavorite"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_notifyPre"
                android:contentDescription="@null"
                android:padding="6dp"
                android:src="@drawable/img_notifyfavorite" />

            <ImageView
                android:id="@+id/img_notifyPre"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/img_notifyPlayOrPause"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:padding="6dp"
                android:src="@drawable/notify_btn_dark_prev_selector" />

            <ImageView
                android:id="@+id/img_notifyPlayOrPause"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/notify_btn_dark_play_normal" />

            <ImageView
                android:id="@+id/img_notifyNext"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_notifyPlayOrPause"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:padding="6dp"
                android:src="@drawable/notify_btn_dark_next_selector" />

            <ImageView
                android:id="@+id/img_notifyLyrics"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_notifyNext"
                android:contentDescription="@null"
                android:padding="6dp"
                android:src="@drawable/img_notifylyrics" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>